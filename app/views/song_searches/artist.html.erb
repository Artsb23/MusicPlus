<br>


<div id = "artist_container" class="container" style="width:100%"> 
	<br> 
	<div style="float:left;width: 300px">
				<img src="<%=@artist_img[0] %>" style="height:400px">
    </div> 
	<div id="artist_bio" class="expandable" style="color:darkgrey; float:right; width:550px">
		<h3 style="color:darkgrey;"> <%=@artist_name[0] %> </h3>
		<%= @artist_bio %> 
	</div>
	<br>
	<br>
	<br>
	<div class="container" style = "clear:both">

        <div class="row" >
			<br>
			<br>
            <div class="col-lg-12">
				
                <h1 style="color:darkgrey;">Popular Songs
                </h1>
            </div>
			<br>
			<br>
			<hr>

        </div>
		<% for id, title, artName, type, img in @spotify_id %>
        <div class="row" id="sngsearch" style="height:100px">

            <div class="col-lg-7 col-md-7" style="height:100px" >
			
			<div style="width:10px; height:10px; float:left;"></div>
			<div style="float:left">
                <h3 style="color: darkseagreen;">Title &nbsp;&nbsp;: <span class="text-muted text-center"><%= title %></span></h3>
                <h4 style="color: darkseagreen;">Artist &nbsp;&nbsp;&nbsp;: &nbsp;<span class="text-muted text-center"><%= artName %></span></h4>
				<h4 style="color: darkseagreen;">Genre  &nbsp;: &nbsp;<span class="text-muted text-center"><% type.each do |type|%><%= type %> <% end %></span></h4>
				
			</div>
            </div>

            <div id="iframe_container_<%= id%>" class="col-lg-5 col-md-5">
                
                
            </div>

        </div>
		 <hr>
		<% end %>
      
	


</div>